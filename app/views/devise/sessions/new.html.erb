<div ng-app="MainCtrl" class="middle-box text-center loginscreen  animated fadeInDown">
  <div>
    <div>
      <h1 class="logo-name">F+</h1>
    </div>
    <h3>Bienvenido a Finazas Plus</h3>
    <p>Perfectly designed and precisely prepared admin theme with over 50 pages with extra new web app views.
    </p>

    <%- if devise_mapping.omniauthable? %>
        <%- resource_class.omniauth_providers.each do |provider| %>
            <%= link_to omniauth_authorize_path(resource_name, provider), :class=>"btn btn-success" do %>
                <% if OmniAuth::Utils.camelize(provider) == "Facebook" %>
                    <i class="fa fa-facebook"></i> |
                <% end %>
                <% if OmniAuth::Utils.camelize(provider) == "Twitter" %>
                    <i class="fa fa-twitter"></i> |
                <% end %>
                <%= "Sign in with #{OmniAuth::Utils.camelize(provider)}" %>
            <% end %>
            <br /><br />
        <% end -%>
    <% end -%>

    <p class="m-t"> <small>AppCorp &copy; 2016</small> </p>
  </div>
</div>
